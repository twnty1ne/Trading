                    <decisionNode value="inside_channel_short"/>
                </positiveNode>
                <negativeNode>
                    <decisionNode value="inside_channel_long"/>
                </negativeNode>
            </splitNode>
        </positiveNode>
        <negativeNode>
            <decisionNode value="outside_channel"/>
        </negativeNode>
    </splitNode>
</DecisionTree>